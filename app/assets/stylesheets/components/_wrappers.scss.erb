.wrapper-show-job-title {
  width: 100%;
  height: 70px;
  padding: 25px 5px;
  border-bottom: 1px solid #eee;
  h1 {
    font-size: 22px;
    margin-top: 0;
    margin-bottom: 0;
    margin-left: 20px;
  }
  i {
    margin-right: 5px;
  }
}

.wrapper-show-job-descriptions {
  border-left: 1px solid #eee;
  padding: 20px;
  font-size : 14px;
  color: #808080;
  h2 {
    font-size : 16px;
    color : #00a8b2;
    font-weight: bold;
  }
}

.wrapper-index-background {
  background-color: #00a8b2;
  height: 40vh;
  background-size: cover;
  display: flex;
  align-items : center;
  background-attachment: fixed;
  justify-content: center;
  margin-bottom: 20px;
  h1 {
    color: white;
  }
}

.wrapper-index-jobs {
  border-left: 1px solid #eee;
  h3 {
    font-size: 22px;
    margin-top: 20px;
    margin-bottom: 20px;
    margin-left: 20px;
  }
}

.wrapper-index-filters {
  padding: 0 10px;
  ul {
    margin-top : 40px;
    padding: 0;
    list-style: none;
  }
  li {
    margin-bottom : 15px;
  }
  h3 {
    font-size: 22px;
    margin-top: 20px;
    margin-bottom: 20px;
  }
}
