<div class="wrapper-index-background">
  <h1 class="font-text-space">Vagas exclusivamente para programador</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <div class="wrapper-index-filters font-text-space">
        <h3>Categorias</h3>
        <%= link_to "Todas as vagas", jobs_path %>
        <span class="badge-counter gray"> <%= Job.all.count %></span>
        <ul>
          <% Job::CATEGORIES.each do |category|%>
            <li>
              <form action="/jobs" method="GET">
                <input value="<%= category %>" name="query" id=”query” type="submit" class="btn-list-search">
                <span class="badge-counter gray"> <%= Job.search(category).count %></span>
              </form>
            <li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="wrapper-index-jobs">
        <h3>Todas as Vagas</h3>

        <div class="cell-list">
          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <!-- Vagas programador -->
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-8238946039424735"
               data-ad-slot="4488589603"
               data-ad-format="auto"></ins>
          <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>

        <% @jobs.each do |job| %>
          <div class="cell-list">
            <%= link_to job_path(job) do %>
              <h2><%= job.job_title %></h2>
              <div class="cell-list-content-icon font-text-space gray" >
                <span><i class="fa fa-briefcase icons"></i><%= job.company %></span>
                <span class="text-center"><i class="fa fa-map-marker icons"></i><%= job.city %></span>
              </div>
              <p class="font-text-space gray"><%= job.description.first(120) %>...</p>
            <% end %>
          </div>
        <% end %>

        <div class="cell-list">
          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <!-- Vagas programador -->
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-8238946039424735"
               data-ad-slot="4488589603"
               data-ad-format="auto"></ins>
          <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>
      </div>

      <br>
    </div>
  </div>
</div>
