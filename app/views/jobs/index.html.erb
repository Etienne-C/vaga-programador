<div class="container">

  <div class="row">
    <div class="col-sm-3">

    </div>
    <div class="col-sm-9">
      <div class="wrapper-index-jobs">
        <h1>Todas as Vagas</h1>
        <% @jobs.each do |job| %>
          <div class="cell-list">
            <%= link_to job_path(job) do %>
              <h2><%= job.job_title %></h2>
              <div class="cell-list-content-icon font-text-grey-space" >
                <span><i class="fa fa-briefcase icons"></i><%= job.company %></span>
                <span class="text-center"><i class="fa fa-map-marker icons"></i><%= job.city %></span>
              </div>
              <p class="font-text-grey-space"><%= job.description.first(120) %>...</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
